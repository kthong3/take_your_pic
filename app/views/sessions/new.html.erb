<h1>log in</h1>
<div id="login-form">
  <%= form_tag login_path do %>
    <div class="field">
      <%= label_tag :email %><br>
      <%= email_field_tag :email %>
    </div>
    <div class="field">
      <%= label_tag :password %><br>
      <%= password_field_tag :password %>
    </div>
    <div class="actions">
      <%= submit_tag "login" %>
    </div>
  <% end %>
</div>
<div class="account">
  don't have an account? <%= link_to "sign up", signup_path %>
</div>