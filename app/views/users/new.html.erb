<h1>Sign Up</h1>
<div id="signup-form">
  <%= form_for @user do |f| %>
    <% if @user.errors.any? %>
      <div class="error_messages">
        <h2>form is invalid.</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message.downcase %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :email %><br>
      <%= f.email_field :email %>
    </div>
    <div class="field">
      <%= f.label :password %><br>
      <%= f.password_field :password %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation %><b>
      <%= f.password_field :password_confirmation %>
    </div>
    <div class="actions">
      <%= f.submit "sign up" %>
    </div>
  <% end %>
</div>